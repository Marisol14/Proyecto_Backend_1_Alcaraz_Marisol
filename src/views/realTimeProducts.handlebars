    {{#each products}}
        <div class="product-card" data-id="{{this.id}}">
            <h3>{{this.title}}</h3>
            <p><strong>ğŸ’² Precio:</strong> ${{this.price}}</p>
            <p><strong>ğŸ“œ DescripciÃ³n:</strong> {{this.description}}</p>
            <p><strong>ğŸ“¦ Stock:</strong> {{this.stock}}</p>
            <p><strong>ğŸ· CategorÃ­a:</strong> {{this.category}}</p>
            <button class="eliminar-btn">âŒ Eliminar</button>
        </div>
    {{/each}}
