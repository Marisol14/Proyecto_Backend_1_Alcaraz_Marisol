<h1 class="titulo">Lista de Productos</h1>

{{#if products}}
  {{#if products.length}}
    <div class="product-container">
      {{#each products}}
        <div class="product-card">
          <h3>{{this.title}}</h3>
          <p><strong>💲 Precio:</strong> ${{this.price}}</p>
          <p><strong>📜 Descripción:</strong> {{this.description}}</p>
          <p><strong>📦 Stock:</strong> {{this.stock}}</p>
          <p><strong>🏷 Categoría:</strong> {{this.category}}</p>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="mensaje">No hay productos disponibles</p>
  {{/if}}
{{else}}
  <p class="mensaje">No hay productos en la lista</p>
{{/if}}
