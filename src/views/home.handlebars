{{!-- home.handlebars --}}
<h1>{{title}}</h1>
{{#if products}}
  {{#if products.length}}
    <ul>
      {{#each products}}
        <li>{{this.title}} - ${{this.price}}</li>
      {{/each}}
    </ul>
  {{else}}
    <p>No hay productos disponibles</p>
  {{/if}}
{{else}}
  <p>No hay productos en la lista</p>
{{/if}}
